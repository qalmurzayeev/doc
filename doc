<script id="registration-logic">
document.addEventListener('DOMContentLoaded', function() {
const continueBtn = document.getElementById('continue-btn');
const nameInput = document.getElementById('user-name');
const ageInput = document.getElementById('user-age');
const weightInput = document.getElementById('user-weight');
continueBtn.addEventListener('click', function() {
const name = nameInput.value.trim();
const age = ageInput.value;
const weight = weightInput.value;
if (!name || !age || !weight) {
alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è');
return;
}
localStorage.setItem('userName', name);
localStorage.setItem('userAge', age);
localStorage.setItem('userWeight', weight);
document.getElementById('registration-screen').classList.remove('active');
document.getElementById('main-screen').classList.add('active');
document.getElementById('welcome-text').textContent = `–ü—Ä–∏–≤–µ—Ç, ${name}!`;
});
});
</script>
<script id="navigation-logic">
document.addEventListener('DOMContentLoaded', function() {
const screens = {
'home-tab': 'main-screen',
'chat-tab': 'chat-screen',
'camera-tab': 'camera-screen'
};
Object.keys(screens).forEach(tabId => {
const tab = document.getElementById(tabId);
if (tab) {
tab.addEventListener('click', function() {
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});
document.getElementById(screens[tabId]).classList.add('active');
document.querySelectorAll('[id$="-tab"]').forEach(t => {
const icon = t.querySelector('i');
const text = t.querySelector('span');
icon.className = icon.className.replace('-fill', '-line').replace('text-primary', 'text-gray-400');
text.className = text.className.replace('text-primary', 'text-gray-400');
});
const activeIcon = this.querySelector('i');
const activeText = this.querySelector('span');
activeIcon.className = activeIcon.className.replace('-line', '-fill').replace('text-gray-400', 'text-primary');
activeText.className = activeText.className.replace('text-gray-400', 'text-primary');
});
}
});
const backBtn = document.getElementById('back-btn');
if (backBtn) {
backBtn.addEventListener('click', function() {
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});
document.getElementById('main-screen').classList.add('active');
});
}
const cameraBackBtn = document.getElementById('camera-back-btn');
if (cameraBackBtn) {
cameraBackBtn.addEventListener('click', function() {
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});
document.getElementById('main-screen').classList.add('active');
});
}
});
</script>
<script id="chat-logic">
document.addEventListener('DOMContentLoaded', function() {
const chatInput = document.getElementById('chat-input');
const sendBtn = document.getElementById('send-btn');
const chatMessages = document.getElementById('chat-messages');
const quickQuestions = document.querySelectorAll('.quick-question');
const responses = {
'–ö–∞–∫ —Ä–∞—Å—Å—á–∏—Ç–∞—Ç—å —Å—É—Ç–æ—á–Ω—É—é –Ω–æ—Ä–º—É –∫–∞–ª–æ—Ä–∏–π?': '–î–ª—è —Ä–∞—Å—á–µ—Ç–∞ —Å—É—Ç–æ—á–Ω–æ–π –Ω–æ—Ä–º—ã –∫–∞–ª–æ—Ä–∏–π –∏—Å–ø–æ–ª—å–∑—É–π—Ç–µ —Ñ–æ—Ä–º—É–ª—É –•–∞—Ä—Ä–∏—Å–∞-–ë–µ–Ω–µ–¥–∏–∫—Ç–∞: –¥–ª—è –º—É–∂—á–∏–Ω BMR = 88.362 + (13.397 √ó –≤–µ—Å –≤ –∫–≥) + (4.799 √ó —Ä–æ—Å—Ç –≤ —Å–º) - (5.677 √ó –≤–æ–∑—Ä–∞—Å—Ç). –ó–∞—Ç–µ–º —É–º–Ω–æ–∂—å—Ç–µ –Ω–∞ –∫–æ—ç—Ñ—Ñ–∏—Ü–∏–µ–Ω—Ç –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏ (1.2-1.9).',
'–ö–∞–∫–∏–µ –ø—Ä–æ–¥—É–∫—Ç—ã –ª—É—á—à–µ –µ—Å—Ç—å –ø–æ—Å–ª–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏?': '–ü–æ—Å–ª–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏ —Ä–µ–∫–æ–º–µ–Ω–¥—É—é –±–µ–ª–∫–æ–≤–æ-—É–≥–ª–µ–≤–æ–¥–Ω—ã–µ –ø—Ä–æ–¥—É–∫—Ç—ã: –∫—É—Ä–∏—Ü–∞ —Å —Ä–∏—Å–æ–º, —Ç–≤–æ—Ä–æ–≥ —Å –±–∞–Ω–∞–Ω–æ–º, –ø—Ä–æ—Ç–µ–∏–Ω–æ–≤—ã–π –∫–æ–∫—Ç–µ–π–ª—å —Å –æ–≤—Å—è–Ω–∫–æ–π. –≠—Ç–æ –ø–æ–º–æ–∂–µ—Ç –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –º—ã—à—Ü—ã –∏ –ø–æ–ø–æ–ª–Ω–∏—Ç—å —ç–Ω–µ—Ä–≥–∏—é.',
'–ö–∞–∫ —Å–æ—Å—Ç–∞–≤–∏—Ç—å –ø–ª–∞–Ω –ø–∏—Ç–∞–Ω–∏—è –¥–ª—è –ø–æ—Ö—É–¥–µ–Ω–∏—è?': '–î–ª—è –ø–æ—Ö—É–¥–µ–Ω–∏—è —Å–æ–∑–¥–∞–π—Ç–µ –¥–µ—Ñ–∏—Ü–∏—Ç –∫–∞–ª–æ—Ä–∏–π 300-500 –∫–∫–∞–ª –æ—Ç –Ω–æ—Ä–º—ã. –í–∫–ª—é—á–∏—Ç–µ: 30% –±–µ–ª–∫–æ–≤, 40% —É–≥–ª–µ–≤–æ–¥–æ–≤, 30% –∂–∏—Ä–æ–≤. –ï—à—å—Ç–µ 4-5 —Ä–∞–∑ –≤ –¥–µ–Ω—å –Ω–µ–±–æ–ª—å—à–∏–º–∏ –ø–æ—Ä—Ü–∏—è–º–∏. –ü–µ–π—Ç–µ 2-3 –ª–∏—Ç—Ä–∞ –≤–æ–¥—ã –≤ –¥–µ–Ω—å.'
};
function addMessage(text, isUser = false) {
const messageDiv = document.createElement('div');
messageDiv.className = `flex items-start space-x-3 chat-message ${isUser ? 'flex-row-reverse space-x-reverse' : ''}`;
messageDiv.innerHTML = `
<div class="w-8 h-8 ${isUser ? 'bg-gray-300' : 'bg-primary'} rounded-full flex items-center justify-center flex-shrink-0">
<i class="ri-${isUser ? 'user' : 'robot'}-line text-white text-sm"></i>
</div>
<div class="bg-${isUser ? 'primary text-white' : 'white'} rounded-xl ${isUser ? 'rounded-tr-sm' : 'rounded-tl-sm'} px-4 py-3 max-w-xs shadow-sm">
<p class="text-sm ${isUser ? 'text-white' : 'text-gray-800'}">${text}</p>
</div>
`;
chatMessages.appendChild(messageDiv);
chatMessages.scrollTop = chatMessages.scrollHeight;
}
function sendMessage() {
const message = chatInput.value.trim();
if (!message) return;
addMessage(message, true);
chatInput.value = '';
setTimeout(() => {
const response = responses[message] || '–°–ø–∞—Å–∏–±–æ –∑–∞ –≤–∞—à –≤–æ–ø—Ä–æ—Å! –Ø –∞–Ω–∞–ª–∏–∑–∏—Ä—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –∏ —Å–∫–æ—Ä–æ –¥–∞–º –ø–æ–¥—Ä–æ–±–Ω—ã–π –æ—Ç–≤–µ—Ç. –ê –ø–æ–∫–∞ —Ä–µ–∫–æ–º–µ–Ω–¥—É—é —Å—Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—Ä–æ–≤–∞—Ç—å –≤–∞—à—É –µ–¥—É –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞ –∫–∞–ª–æ—Ä–∏–π–Ω–æ—Å—Ç–∏.';
addMessage(response);
}, 1000);
}
sendBtn.addEventListener('click', sendMessage);
chatInput.addEventListener('keypress', function(e) {
if (e.key === 'Enter') {
sendMessage();
}
});
quickQuestions.forEach(btn => {
btn.addEventListener('click', function() {
const question = this.dataset.question;
chatInput.value = question;
sendMessage();
});
});
});
</script>
<script id="camera-logic">
document.addEventListener('DOMContentLoaded', function() {
const cameraBtn = document.getElementById('camera-btn');
const captureBtn = document.getElementById('capture-btn');
cameraBtn.addEventListener('click', function() {
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});
document.getElementById('camera-screen').classList.add('active');
});
captureBtn.addEventListener('click', function() {
const analysisResults = [
{ name: '–û–≤–æ—â–Ω–æ–π —Å–∞–ª–∞—Ç', calories: 150, status: 'healthy', time: '–¢–æ–ª—å–∫–æ —á—Ç–æ' },
{ name: '–ü–∞—Å—Ç–∞ —Å –∫—Ä–µ–≤–µ—Ç–∫–∞–º–∏', calories: 420, status: 'moderate', time: '–¢–æ–ª—å–∫–æ —á—Ç–æ' },
{ name: '–®–æ–∫–æ–ª–∞–¥–Ω—ã–π —Ç–æ—Ä—Ç', calories: 650, status: 'unhealthy', time: '–¢–æ–ª—å–∫–æ —á—Ç–æ' }
];
const randomResult = analysisResults[Math.floor(Math.random() * analysisResults.length)];
setTimeout(() => {
alert(`–ê–Ω–∞–ª–∏–∑ –∑–∞–≤–µ—Ä—à–µ–Ω!\n\n–ë–ª—é–¥–æ: ${randomResult.name}\n–ö–∞–ª–æ—Ä–∏–∏: ${randomResult.calories} –∫–∫–∞–ª\n–û—Ü–µ–Ω–∫–∞: ${randomResult.status === 'healthy' ? '–ü–æ–ª–µ–∑–Ω–æ' : randomResult.status === 'moderate' ? '–£–º–µ—Ä–µ–Ω–Ω–æ' : '–í—Ä–µ–¥–Ω–æ'}`);
document.querySelectorAll('.screen').forEach(screen => {
screen.classList.remove('active');
});
document.getElementById('main-screen').classList.add('active');
}, 2000);
});
});
</script>
</body>
